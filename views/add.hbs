<h1>Додати новий курс</h1>

<form action="/add" method="post">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required>
    <label for="title">Назва курсy</label>
    <span class="helper-text" data-error="Введіть назву" data-success="Ok"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="text" class="validate" min="1" required>
    <label for="price">Ціна</label>
    <span class="helper-text" data-error="Введіть суму" data-success="Ok"></span>
  </div>

  <div class="input-field">
    <input id="img" name="img" type="text" class="validate" required>
    <label for="img">URL image</label>
    <span class="helper-text" data-error="Введіть урл зображення" data-success="Ok"></span>
  </div>

  <button class="btn btn-primary">Додати курс</button>
</form>