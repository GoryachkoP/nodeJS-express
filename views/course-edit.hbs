<h1>Edit course {{course.title}}</h1>

<form action="/courses/edit" method="POST">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" value="{{course.title}}" required>
    <label for="title">Назва курсy</label>
    <span class="helper-text" data-error="Введіть назву" data-success="Ok"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="text" class="validate" min="1" value="{{course.price}}" required>
    <label for="price">Ціна</label>
    <span class="helper-text" data-error="Введіть суму" data-success="Ok"></span>
  </div>

  <div class="input-field">
    <input id="image" name="image" type="text" class="validate" value="{{course.image}}" required>
    <label for="image">URL image</label>
    <span class="helper-text" data-error="Введіть урл зображення" data-success="Ok"></span>
  </div>

  <input type="hidden" name="id" value="{{course.id}}">

  <button class="btn btn-primary">Edit course</button>
</form>